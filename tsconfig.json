{
  "ts-node": {
    "compilerOptions": {
      "module": "es2022"
    }
  },
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
